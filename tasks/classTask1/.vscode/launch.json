    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) run debug file",
            "visualizerFile": "~/.vscode/gcc.natvis",
            "showDisplayString": true,
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/classTask1",
            "args": [],
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}